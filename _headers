# Cloudflare Pages custom headers

/css/*
  Cache-Control: public, max-age=3600, must-revalidate

/js/*
  Cache-Control: public, max-age=3600, must-revalidate

/
  Cache-Control: public, max-age=0, must-revalidate
  Permissions-Policy: gamepad=*, autoplay=*, fullscreen=*

/*.html
  Cache-Control: public, max-age=0, must-revalidate

/index.html
  Cache-Control: public, max-age=0, must-revalidate
  Permissions-Policy: gamepad=*, autoplay=*, fullscreen=*
